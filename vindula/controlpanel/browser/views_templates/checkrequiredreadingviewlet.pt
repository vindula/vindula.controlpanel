<div class="check-document-read" tal:condition="viewlet/isRequiredReading">
    <tal:def tal:define="data_checked viewlet/getDataRead|nothing;">
        <div tal:condition="data_checked">
            
        </div>
        
        <div tal:condition="not:data_checked" 
             class="clear">
            <script type="text/javascript" tal:attributes="src string:${context/portal_url}/++resource++vindula.controlpanel/js/required_reading.js"></script> 
            
            <form>
                <input type="hidden" />
                <label for="agree" class="left">
                    <input type="checkbox" id="agree" />
                    Li e estou ciente da informação deste conteúdo
                </label>
            </form>
            
        </div>
    </tal:def>
</div>
